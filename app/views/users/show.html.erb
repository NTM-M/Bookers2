<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image ,:fill,100,100,format:'jpeg',class:"img-circle pull-left profile-img" %></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= render'users/user',user: @user %>
<%= render'books/new' ,book: @book %>