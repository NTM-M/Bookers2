<h1>Users</h1>


<table>
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user,:profile_image,:fill,100,100,format:'jpeg',class:"img-circle pull-left profile-img" %></td>
			<td><%= user.name %></td>
		</tr>
		<% end %>
	</tbody>
</table>


<%= render'users/user',user: @user %>
<%= render'books/new' ,book: @book %>